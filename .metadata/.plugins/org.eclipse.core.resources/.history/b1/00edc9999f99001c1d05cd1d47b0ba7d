import java.math.BigDecimal;

public enum Product {

	COKE,
	LEMONADE,
	TANGO,
	WATER,
	PEPSI,
	SPRITE;
	
	@Override
	public String toString() {
		switch(this) {
		case COKE:
			return "Coke";
		case LEMONADE:
			return "Lemonade";
		case TANGO:
			return "Tango";
		case WATER:
			return "Water";
		case PEPSI:
			return "Pepsi";
		case SPRITE:
			return "Sprite";
		default:
			return null;
		
		}
	}
	
	public BigDecimal getPrice() {
		switch(this) {
		case COKE:
			return BigDecimal.valueOf(1.5);
		case LEMONADE:
			return BigDecimal.valueOf(1.2);
		case TANGO:
			return BigDecimal.valueOf(1.4);
		case WATER:
			return BigDecimal.valueOf(1);
		case PEPSI:
			return BigDecimal.valueOf(1.3);
		case SPRITE:
			return BigDecimal.valueOf(1.2);
		default:
			return null;
		}
	}
}
