import java.math.BigDecimal;

public class Product {
	
	private String name;
	private BigDecimal price;
	
	public Product(String name, double price) {
		this.name = name;
		this.price = BigDecimal.valueOf(price);
	}
	
	public String getName() {
		return name;
	}
	
	public BigDecimal getPrice() {
		return price;
	}

}
